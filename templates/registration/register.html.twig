{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<h1>Créer un compte</h1>
	{{ form_start(form) }}
	{{ form_row(form.email) }}
	{{ form_row(form.nom) }}
	{{ form_row(form.password) }}
	<button type="submit" class="btn btn-primary">S'inscrire</button>
	{{ form_end(form) }}
	<p>Déjà inscrit ?
		<a href="{{ path('app_login') }}">Se connecter</a>
	</p>
{% endblock %}
