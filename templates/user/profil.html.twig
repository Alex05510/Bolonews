{% extends "base.html.twig" %}

{% block title %}Profil de
	{{ user.nom }}
{% endblock %}

{% block body %}
	<h1>Mes articles publiés</h1>
	<a href="{{ path('app_article_new') }}">Créer un nouvel article</a>
	<div class="mes-articles">
		{% for article in articles %}
			<div class="card">
				<span>{{ article.categorie.nom }}</span>
				<h2>{{ article.titre }}</h2>
				<span>{{ article.auteur.nom }}</span>
				<span>{{ article.date|date('d/m/Y H:i') }}</span>
				<p>{{ article.chapeau }}</p>
				<a href="{{ path('app_article_show', {'id': article.id}) }}">Lire la suite</a>

			</div>
		{% else %}
			<p>Vous n'avez publié aucun article.</p>
		{% endfor %}
	</div>
{% endblock %}
